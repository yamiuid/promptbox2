{
  "version": 1,
  "include": ["/*"],
  "exclude": ["/_assets/*", "/build/*", "/_headers", "/_redirects"],
  "headers": [
    {
      "for": "/*.js",
      "values": {
        "Content-Type": "application/javascript; charset=utf-8"
      }
    },
    {
      "for": "/assets/*.js",
      "values": {
        "Content-Type": "application/javascript; charset=utf-8"
      }
    },
    {
      "for": "/*.css",
      "values": {
        "Content-Type": "text/css; charset=utf-8"
      }
    },
    {
      "for": "/site.webmanifest",
      "values": {
        "Content-Type": "application/manifest+json; charset=utf-8"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
} 